@model IEnumerable<TokoCiLeni.Models.Admin>

@{
    ViewData["Title"] = "Index";
}

<h1>Data Admin</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayName("Nama Admin")
            </th>
            <th>
                @Html.DisplayName("Id Admin")
            </th>          
        </tr>
    </thead>
    
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdminName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCustomer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAdmin">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAdmin">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAdmin">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
